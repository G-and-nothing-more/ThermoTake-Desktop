#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<CarrierDropDown@DropDown>:
    Widget:
        size_hint_y: None
        height: 44

BoxLayout:
    orientation: 'horizontal'
    phoneNum: '655-666-6999'
    padding: 10
    BoxLayout:
        id: graphBox
    BoxLayout:
        id: sidebar
        size_hint: (1, 1)
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Widget:
            # text: "Temp"
            size_hint: (1, 1)
        Label:
            id: statusTicker
            text: "Status: Nominal"
        Button:
            text: "Activate display"
            font_size: dp(25)
            size_hint: (1, 1)
            on_press: app.activateDisplayBTN()
        Button:
            text: "Send message"
            font_size: dp(25)
            size_hint: (1, 1)
            on_press: app.sendMessageBTN()
        Button:
            id: carrierDropButton
            font_size: dp(25)
            text: "Select Carrier"
        CarrierDropDown:
            id: carrierDrop
        TextInput:
            id: phoneNumBox
            text: root.phoneNum
            size_hint: (1, 0.4)
        Widget:
            size_hint: (1, 3)
