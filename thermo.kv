#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<CarrierDropDown@DropDown>:
    Widget:
        size_hint_y: None
        height: 44

<NumericInput@TextInput>:
    size_hint_y: 0.4

BoxLayout:
    orientation: 'horizontal'
    phoneNum: '655-666-6999'
    padding: 10
    BoxLayout:
        id: graphBox
    BoxLayout:
        id: sidebar
        size_hint: (1, 1)
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Widget:
            # text: "Temp"
            size_hint: (1, 1)
        Label:
            id: statusTicker
            text: "Status: Nominal"
            font_size: dp(25)
        Button:
            text: "Activate display"
            font_size: dp(25)
            size_hint: (1, 1)
            on_press: app.activateDisplayBTN()
        Button:
            text: "Send message"
            font_size: dp(25)
            size_hint: (1, 1)
            on_press: app.sendMessageBTN()
        Button:
            id: carrierDropButton
            font_size: dp(25)
            text: "Select Carrier"
        CarrierDropDown:
            id: carrierDrop
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Lower Limit'
                    font_size: dp(20)
                NumericInput:
                    multiline: False
                    id: lowerText
                    text: '5'
                    size_hint_y: None
                    height: 40
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Upper Limit'
                    font_size: dp(20)
                NumericInput:
                    multiline: False
                    id: upperText
                    text: '50'
                    size_hint_y: None
                    height: 40
        TextInput:
            id: phoneNumBox
            text: app.phoneNum
            size_hint: (1, None)
            height: 40
            multiline: False
        Widget:
            size_hint: (1, 3)
